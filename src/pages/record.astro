---
import Base from "../components/base.astro";
import RecordButton from "../components/cropper/RecordButton";
---

<Base>
	<RecordButton client:load />
</Base>

<style is:global>
	button {
		width: 3rem;
		height: 3rem;
		display: flex;
		align-items: center;
		justify-content: center;
		background: lightseagreen;
		outline: none;
		border-radius: 50%;
		transition: transform 0.4s cubic-bezier(0.47, 1.64, 0.41, 0.8);
		transform: scale(1);
		overflow: hidden;
		cursor: pointer;
		margin: 0.2em;
		/* box-shadow: 1px 1px 24px 4px rgba(255, 29, 155, 0); */
	}

	button:hover {
		transform: scale(1.05);
		/* box-shadow: 1px 1px 24px 4px rgba(255, 29, 155, 0.2); */
	}

	button:active {
		transform: scale(0.95);
	}

	button::before {
		content: "";
		position: absolute;
		top: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(
			120deg,
			transparent,
			rgba(255, 255, 255, 0.2),
			transparent
		);
		left: -100%;
		transition: all 0.3s ease-in-out;
	}

	button:hover::before {
		left: 100%;
	}

	@-webkit-keyframes shine {
		0% {
			left: -100%;
			transition-property: left;
		}
		11.5044247788%,
		100% {
			left: 100%;
			transition-property: left;
		}
	}

	@keyframes shine {
		0% {
			left: -100%;
			transition-property: left;
		}
		11.5044247788%,
		100% {
			left: 100%;
			transition-property: left;
		}
	}
</style>
